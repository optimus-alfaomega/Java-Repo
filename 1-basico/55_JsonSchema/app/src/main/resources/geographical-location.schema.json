{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "https://picodotdev.github.io/blog-bitix/misc/json/geographical-location.schema.json",
  "title": "Longitude and Latitude",
  "description": "A geographical coordinate on a planet (most commonly Earth).",
  "required": [ "latitude", "longitude" ],
  "type": "object",
  "properties": {
    "latitude": {
      "type": "number",
      "minimum": -90,
      "maximum": 90
    },
    "longitude": {
      "type": "number",
      "minimum": -180,
      "maximum": 180
    }
  }
}